{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Antigravity Billing Manager",
  "version": "0.1.0",
  "identifier": "com.antigravity.billing",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Antigravity Billing Manager",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "center": true,
        "minWidth": 960,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
